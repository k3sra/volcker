<Window x:Class="Volcker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volcker"
        xmlns:vm="clr-namespace:Volcker.ViewModels"
        mc:Ignorable="d"
        Title="Volcker" Height="600" Width="900"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource WindowBackgroundBrush}" CornerRadius="8" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="Transparent">
                <TextBlock Text="Volcker" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button Content="—" Width="40" Height="32" Click="Minimize_Click" Background="Transparent" Foreground="{StaticResource SecondaryTextBrush}" Style="{StaticResource {x:Type Button}}"/>
                    <Button Content="✕" Width="40" Height="32" Click="Close_Click" Background="Transparent" Foreground="{StaticResource SecondaryTextBrush}" Style="{StaticResource {x:Type Button}}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#E81123" Duration="0:0:0.1"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="White" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="Transparent" Duration="0:0:0.1"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="#AAAAAA" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Side Panel: Blocked Apps & History -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="0,0,0,8" Margin="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Headers -->
                        <StackPanel Orientation="Horizontal" Margin="10,15,10,10">
                            <RadioButton Content="BLOCKED" IsChecked="True" GroupName="Tabs" x:Name="TabBlocked"
                                         Style="{StaticResource {x:Type ToggleButton}}"
                                         Background="Transparent" BorderThickness="0" Foreground="{StaticResource SecondaryTextBrush}"
                                         FontSize="11" FontWeight="Bold" Margin="0,0,15,0" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent">
                                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>

                            <RadioButton Content="HISTORY" GroupName="Tabs" x:Name="TabHistory"
                                         Style="{StaticResource {x:Type ToggleButton}}"
                                         Background="Transparent" BorderThickness="0" Foreground="{StaticResource SecondaryTextBrush}"
                                         FontSize="11" FontWeight="Bold" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent">
                                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </StackPanel>

                        <!-- Blocked List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding BlockedApps}" SelectedItem="{Binding SelectedApp}" 
                                 Visibility="{Binding IsChecked, ElementName=TabBlocked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Background="Transparent" BorderThickness="0" Margin="5,0,5,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,8" Margin="0,2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Icon -->
                                                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6Z" 
                                                              Fill="{StaticResource DangerBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding DirectoryName}" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding BlockedExeCount, StringFormat='{}{0} EXEs blocked'}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#3D3D3D"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#333333"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- History List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding HistoryApps}" 
                                 Visibility="{Binding IsChecked, ElementName=TabHistory, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Background="Transparent" BorderThickness="0" Margin="5,0,5,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="10,8" Margin="0,2">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!-- Icon (History/Clock) -->
                                                        <Path Data="M13.5,8H12V13L16.28,15.54L17,14.33L13.5,12.25V8M13,3A9,9 0 0,0 4,12H1L4.96,16.03L9,12H6A7,7 0 0,1 13,5A7,7 0 0,1 20,12A7,7 0 0,1 13,19C11.07,19 9.32,18.21 8.06,16.94L6.64,18.36C8.27,20 10.5,21 13,21A9,9 0 0,0 22,12A9,9 0 0,0 13,3" 
                                                              Fill="{StaticResource SecondaryTextBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding DirectoryName}" Foreground="{StaticResource SecondaryTextBrush}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding LastActionDate, StringFormat='{}{0:g}'}" Foreground="#666666" FontSize="11"/>
                                                        </StackPanel>

                                                        <!-- Block Button -->
                                                        <Button Grid.Column="2" Content="Block" 
                                                                Command="{Binding DataContext.BlockFromHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                                CommandParameter="{Binding}"
                                                                Background="Transparent" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1" 
                                                                Foreground="{StaticResource AccentBrush}" FontSize="10" Padding="8,2" Margin="5,0,0,0">
                                                            <Button.Style>
                                                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                                                            <Setter Property="Foreground" Value="White"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#252525"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Main Area -->
                <Grid Grid.Column="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header / Actions -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="+ Block New App" Command="{Binding BlockNewAppCommand}" Style="{StaticResource PrimaryButtonStyle}" Padding="20,10"/>
                    </StackPanel>

                    <!-- Details View -->
                    <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedApp}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SelectedApp.DirectoryName}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding SelectedApp.FullPath}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" HorizontalAlignment="Center" Margin="0,0,0,30" TextWrapping="Wrap" MaxWidth="400" TextAlignment="Center"/>
                            
                            <Border Background="#252525" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel Margin="0,0,40,0">
                                        <TextBlock Text="STATUS" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" FontWeight="Bold"/>
                                        <TextBlock Text="Blocked" FontSize="16" Foreground="{StaticResource DangerBrush}" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="EXECUTABLES" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SelectedApp.BlockedExeCount}" FontSize="16" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Button Content="Unblock App" Command="{Binding UnblockAppCommand}" Background="Transparent" BorderBrush="{StaticResource DangerBrush}" BorderThickness="1" Foreground="{StaticResource DangerBrush}" Padding="30,10" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Empty State -->
                    <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedApp}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <StackPanel HorizontalAlignment="Center" Opacity="0.5">
                            <TextBlock Text="Select an app to view details" Foreground="{StaticResource SecondaryTextBrush}" FontSize="16"/>
                        </StackPanel>
                    </Grid>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="0,10,0,0" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                            <ProgressBar IsIndeterminate="{Binding IsBusy}" Width="100" Height="4" HorizontalAlignment="Right" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
